                on_press:
                    app.send_data(o1.text,"o_g_s", 'o_g_s2') if o1.disabled==False else app.send_data(0, 'o_g_s', 'o_g_s20')

            Bttn:
                text: "edit"
                on_release:
                    o1.focus= True
                    o1.disabled= False
            


        Label:
            size_hint: None, None
            size: self.texture_size
            font_size: 25
            pos_hint: {'top':.32, 'x':.025}
