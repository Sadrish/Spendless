<Bttn@Button>:
    bold: True
    background_normal: ''
    background_down: ''
    background_color: [0,0,0,1]
    color: [1,1,1,1]
    on_press: 
        self.background_color= [0,1,1,1]
        self.color= [0,1,1,1]
    on_release:
        self.background_color= [0,0,0,1]
        self.color= [1,1,1,1]

<Ent@MDTextFieldRect>:
    multiline: False
    input_tupe: 'number'
    input_filter: 'float'

<Other_Goods_Services>:
    o: o
    o1: o1
    o3: o3
    canvas.before:
        Color:
            rgba: rgba('#00FFFF')
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 0,0,0,1
        Line:
            points: [(0, root.height*(2/3)-10), (root.width,root.height*(2/3)-10)]
            width: 1.5
        Color:
            rgba: 0,0,0,1
        Line:
            points: [(0, root.height*(1/3)-10), (root.width,root.height*(1/3)-10)]
            width: 1.5


    MDToolbar:
        pos_hint: {'top':1}
        size_hint: 1, .08
        md_bg_color: [0,0,0,1]
        title: 'Other Goods and Services'
        elevation: 10.5
        bold: True
        left_action_items: [['arrow-left', lambda x: app.go_to_home(1) if o.disabled==True and o1.disabled==True and o3.disabled==True else app.show_me('inside')]]

    FloatLayout:
        size_hint: 1, .92
        pos_hint: {'bottom':1}
        Label:
            size_hint: None, None
            size: self.texture_size
            font_size: 25
            pos_hint: {'top':1, 'x':.025}
            text: 'Apparel and Services:'
            color: 0,0,0,1
            bold: True
        Ent:
            id: o
            hint_text: 'spendings...'
            font_size: 24
            size_hint: .95, .08
            pos_hint: {'top':.95, 'x':.025}
        BoxLayout:
            spacing: 6
            size_hint: .95, .05
            pos_hint: {'top':.85, 'x':.025}
            Bttn:
                text: 'save'
                on_release:
                    o.focus= False
                    o.disabled= True
                on_press:
                    app.send_data(o.text,"o_g_s", 'o_g_s1') if o.disabled==False else app.send_data(0, 'o_g_s', 'o_g_s10')

            Bttn:
                text: "edit"
                on_release:
                    o.focus= True
                    o.disabled= False
            


        Label:
            size_hint: None, None
            size: self.texture_size
            font_size: 25
            pos_hint: {'top':.68, 'x':.025}
            text: 'Entertainment:'
            color: 0,0,0,1
            bold: True
        Ent:
