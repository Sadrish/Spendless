<Bttn@Button>:
    bold: True
    background_normal: ''
    background_down: ''
    background_color: [0,0,0,1]
    color: [1,1,1,1]
    on_press: 
        self.background_color= [0,1,1,1]
        self.color= [0,1,1,1]
    on_release:
        self.background_color= [0,0,0,1]
        self.color= [1,1,1,1]

<Ent@MDTextFieldRect>:
    multiline: False
    input_tupe: 'number'
    input_filter: 'float'

<Healthcare>:
    health1: health1
    health2: health2
    health3: health3
    canvas.before:
        Color:
            rgba: rgba('#00FFFF')
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 0,0,0,1
        Line:
            points: [(0, root.height*(2/3)-10), (root.width,root.height*(2/3)-10)]
            width: 1.5
        Color:
            rgba: 0,0,0,1
        Line:
            points: [(0, root.height*(1/3)-10), (root.width,root.height*(1/3)-10)]
            width: 1.5


    MDToolbar:
        pos_hint: {'top':1}
        size_hint: 1, .08
        md_bg_color: [0,0,0,1]
        title: 'Healthcare'
        elevation: 10.5
        bold: True
        left_action_items: [['arrow-left', lambda x: app.go_to_home(1) if health1.disabled==True and health2.disabled==True and health3.disabled==True else app.show_me('inside')]]

    FloatLayout:
        size_hint: 1, .92
        pos_hint: {'bottom':1}
        Label:
            size_hint: None, None
            size: self.texture_size
            font_size: 25
            pos_hint: {'top':1, 'x':.025}
            text: 'Health Insurance:'
            color: 0,0,0,1
            bold: True
        Ent:
            id: health1
            hint_text: 'spendings...'
            font_size: 24
            size_hint: .95, .08
            pos_hint: {'top':.95, 'x':.025}
        BoxLayout:
            spacing: 6
            size_hint: .95, .05
            pos_hint: {'top':.85, 'x':.025}
            Bttn:
                text: 'save'
                on_release:
                    health1.focus= False
                    health1.disabled= True
                on_press:
                    app.send_data(health1.text,"health", 'health1') if health1.disabled==False else app.send_data(0, 'health', 'health10')

            Bttn:
                text: "edit"
                on_release:
                    health1.focus= True
                    health1.disabled= False


        Label:
            size_hint: None, None
            size: self.texture_size
            font_size: 25
            pos_hint: {'top':.68, 'x':.025}
            text: 'Medical Services:'
            color: 0,0,0,1
            bold: True
        Ent:
            id: health2
            hint_text: 'spendings...'
            size_hint: .95, .08
            pos_hint: {'top':.63, 'x':.025}
            font_size: 24
        BoxLayout:
            spacing: 6
            size_hint: .95, .05
            pos_hint: {'top':.53, 'x':.025}
            Bttn:
                text: 'save'
                on_release:
                    health2.focus= False
                    health2.disabled= True
                on_press:
                    app.send_data(health2.text,"health", 'health2') if health2.disabled==False else app.send_data(0, 'health', 'health20')

            Bttn:
                text: "edit"
                on_release:
                    health2.focus= True
                    health2.disabled= False


        Label:
            size_hint: None, None
            size: self.texture_size
            font_size: 25
            pos_hint: {'top':.32, 'x':.025}
            text: 'Drugs:'
            color: 0,0,0,1
            bold: True
        Ent:
            id: health3
            hint_text: 'spendings...'
            font_size: 24
            size_hint: .95, .08
            pos_hint: {'top':.27, 'x':.025}
        BoxLayout:
            spacing: 6
            size_hint: .95, .05
            pos_hint: {'top':.17, 'x':.025}
            Bttn:
                text: 'save'
                on_release:
                    health3.focus= False
                    health3.disabled= True
                on_press:
                    app.send_data(health3.text,"health", 'health3') if health3.disabled==False else app.send_data(0, 'health', 'health30')

            Bttn:
                text: "edit"
                on_release:
                    health3.focus= True
                    health3.disabled= False

    MDLabel:
        size_hint: [1, .05]
        pos_hint: {"center_x":.5, 'y':.01}
        halign: 'center'
        theme_text_color: 'Custom'
        text_color: [1,0,0,1]
        text: '(make sure that all textfields are saved.)'.title()
        font_style: 'Caption'

            